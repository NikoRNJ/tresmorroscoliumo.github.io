{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["../../packages/ui/src/*"],
      "@/lib/*": ["../../packages/core/src/lib/*"],
      "@/types/*": ["../../packages/core/src/types/*"],
      "@core/*": ["../../packages/core/src/*"],
      "@ui/*": ["../../packages/ui/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}

