{
  "name": "tres-morros-monorepo",
  "version": "0.2.0",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": "20.18.x"
  },
  "scripts": {
    "dev": "pnpm --filter @tresmorros/web dev",
    "build": "pnpm --filter @tresmorros/web build",
    "start": "pnpm --filter @tresmorros/web start",
    "lint": "pnpm --filter @tresmorros/web lint",
    "check:env": "node tools/scripts/check-env.mjs",
    "export:app": "node tools/scripts/export-minimal.mjs",
    "test": "vitest run --reporter=verbose",
    "test:e2e": "cross-env SENTRY_DISABLED=true PORT=3301 E2E_BASE_URL=http://localhost:3301 FLOW_FORCE_MOCK=true FLOW_ALLOW_MOCK_IN_PROD=true pnpm --filter @tresmorros/web build && cross-env SENTRY_DISABLED=true PORT=3301 E2E_BASE_URL=http://localhost:3301 FLOW_FORCE_MOCK=true FLOW_ALLOW_MOCK_IN_PROD=true start-server-and-test \"pnpm --filter @tresmorros/web start\" http://localhost:3301 \"vitest run --reporter=verbose --config vitest.e2e.config.ts\"",
    "clear:bookings": "node tools/scripts/clear-bookings.mjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@supabase/supabase-js": "^2.81.0",
    "@types/node": "^20.14.7",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.1.0",
    "cross-env": "^10.1.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "start-server-and-test": "^2.1.2",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^4.0.8"
  }
}
