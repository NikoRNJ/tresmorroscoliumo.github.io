{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "apps/*/.next/**"
      ]
    },
    "lint": {
      "cache": false
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "test:e2e": {
      "dependsOn": [
        "dev"
      ],
      "cache": false
    }
  }
}

